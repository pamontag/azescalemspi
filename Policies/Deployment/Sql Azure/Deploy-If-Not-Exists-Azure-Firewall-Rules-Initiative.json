{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "variables": {
        "policySetName": "deploy-if-not-exists-azure-firewall-rules-psd",
        "policySetDisplayName": "Audit or Deploy Azure Sql Firewall Rules White List",
        "policySetDescription": "This initiative audits or deploy the configuration of SQL databases firewall rules white list.",
        "policyDefinitionForFirewallRules": "deploy-if-not-exists-azure-sql-firewall-rules"
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/policySetDefinitions",
            "apiVersion": "2019-09-01",
            "name": "[variables('policySetName')]",
            "properties": {
                "displayName": "[variables('policySetDisplayName')]",
                "description": "[variables('policySetDescription')]",
                "policyType": "Custom",
                "metadata": {
                    "category": "Network"
                },
                "parameters": {
                    "effect": {
                        "type": "string",
                        "defaultValue": "AuditIfNotExists",
                        "allowedValues": [
                            "AuditIfNotExists",
                            "DeployIfNotExists",
                            "Disabled"
                        ],
                        "metadata": {
                            "displayName": "Effect",
                            "description": "Enable or disable the execution of the policy"
                        }
                    }
                },
                "policyDefinitions": [
                    {
                        "policyDefinitionId": "[concat(subscription().id, '/providers/Microsoft.Authorization/policyDefinitions/', variables('policyDefinitionForFirewallRules'))]",
                        "policyDefinitionReferenceId": "Firewall Rules Proxy Congressi",
                        "parameters": {
                            "startIpAddress": {
                                "value": "62.241.24.20"
                            },
                            "endIpAddress": {
                                "value": "62.241.24.29"
                            },
                            "firewallRuleName": {
                                "value": "Proxy Congressi"
                            },
                            "effect": {
                                "value": "[[parameters('effect')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[concat(subscription().id, '/providers/Microsoft.Authorization/policyDefinitions/', variables('policyDefinitionForFirewallRules'))]",
                        "policyDefinitionReferenceId": "Firewall Rules Proxy Pomezia",
                        "parameters": {
                            "startIpAddress": {
                                "value": "62.241.24.42"
                            },
                            "endIpAddress": {
                                "value": "62.241.24.42"
                            },
                            "firewallRuleName": {
                                "value": "Proxy Pomezia"
                            },
                            "effect": {
                                "value": "[[parameters('effect')]"
                            }
                        }
                    }
                ]
            }
        }
    ]
}